---
import { GoogleFontsOptimizer } from "astro-google-fonts-optimizer";
import qrCode from "@images/image-qr-code.png";
import favicon from "/favicon-32x32.png";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- displays site properly based on user's device -->

    <link rel="icon" type="image/png" sizes="32x32" href={favicon} />
    <GoogleFontsOptimizer
      url="https://fonts.googleapis.com/css2?family=Outfit:wght@400;700&display=swap"
    />

    <title>Frontend Mentor | QR code component</title>

    <!-- Feel free to remove these styles or customise in your own stylesheet ðŸ‘ -->
    <style>
      .attribution {
        font-size: 11px;
        text-align: center;
      }
      .attribution a {
        color: hsl(228, 45%, 44%);
      }
    </style>
  </head>
  <body
    class="min-h-screen relativ bg-light-gray font-outfit grid grid-rows-[1fr,_auto] place-content-center"
  >
    <main class="h-min my-auto">
      <section
        class="border-0 p-3 bg-white rounded-2xl flex flex-col gap-4 items-center max-w-xs drop-shadow-xl"
      >
        <img src={qrCode} alt="qr code" class="qr-code rounded-2xl" />
        <h1 class="font-bold text-2xl text-center px-2 text-dark-blue">
          Improve your front-end skills by building projects
        </h1>
        <p class="text-base text-center px-2 mb-8 text-gray-blue">
          Scan the QR code to visit Frontend Mentor and take your coding skills
          to the next level
        </p>
      </section>
    </main>
    <footer class="mt-4">
      <div class="attribution">
        Challenge by <a
          href="https://www.frontendmentor.io?ref=challenge"
          target="_blank">Frontend Mentor</a
        >. Coded by <a href="#">Joao Dos Santos</a>.
      </div>
    </footer>
  </body>
</html>
